<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <h3 class="mt-4 mb-3 text-center">Admin
        <small></small>
    </h3>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    {#                    <h5 class="card-title">Special title treatment</h5>#}
                    <img src="{{ parameters.cdn.img('banner-login.jpg') }}" class="img-fluid" alt="Responsive image">

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ingresa a tu cuenta</h5>
                    <form class="needs-validation" novalidate >
                        <div class="form-group">
                            <label for="exampleInputUser">Usuario</label>
                            <input type="text" class="form-control" id="user" name="_username" required>
                            <div class="invalid-feedback">
                                ingrese usuario.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password" name="_password"
                                   placeholder="Password" aria-describedby="validationTooltipUsernamePrepend" required>
                            <div class="invalid-feedback">
                                ingrese password.
                            </div>
                        </div>
                        <div class="form-row">
                                <select name="rol" id="rol" class="form-control" required>
                                    <option value="" selected>Seleccionar</option>
                                    <option value="admin">Administrador</option>
                                    <option value="teacher">Docente</option>
                                    <option value="coach">Coordinador</option>
                                    <option value="psychologist">Psicologo</option>
                                    <option value="teacher-psychologist">Psicologo/Docente</option>
                                    <option value="secretary">Secretaria</option>
                                </select>
                                <div class="invalid-feedback">
                                    Seleccione un rol.
                                </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check"></div>

                        </div>
                        <button id="btn-login-admin" type="button" class="btn btn-primary">Ingresar</button>
                        <div class="invalid-feedback">
                            Seleccione un rol.
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
